{
  "name": "@jafps/plugin-openapi",
  "version": "1.2.0",
  "description": "Fastify plugin for generating OpenAPI 3.1 document.",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "test": "node --enable-source-maps --experimental-test-coverage --test-coverage-exclude \"src/**/__tests__/*.ts\" --test \"./dist/**/__tests__/*.{spec,test}.js\"",
    "lint": "eslint"
  },
  "author": "Joshua Avalon",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jafpsjs/plugin-openapi.git"
  },
  "bugs": {
    "url": "https://github.com/jafpsjs/plugin-openapi/issues"
  },
  "homepage": "https://github.com/jafpsjs/plugin-openapi#readme",
  "imports": {
    "#hook": {
      "import": "./dist/hook/index.js"
    },
    "#openapi": {
      "import": "./dist/openapi/index.js"
    },
    "#symbol": {
      "import": "./dist/symbol.js"
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "keywords": [
    "fastify",
    "fastify-plugin"
  ],
  "files": [
    "dist/**/*",
    "!dist/**/__tests__/**/*"
  ],
  "devDependencies": {
    "@jafps/plugin-error": "^1.0.1",
    "@jafps/plugin-schema": "^1.2.1",
    "@joshuaavalon/eslint-config-javascript": "^10.0.0",
    "@joshuaavalon/eslint-config-typescript": "^10.0.0",
    "@seriousme/openapi-schema-validator": "^2.7.0",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "fastify": "^5.6.1",
    "globals": "^16.4.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "fastify-plugin": "^5.1.0",
    "github-slugger": "2.0.0",
    "openapi-types": "^12.1.3",
    "typebox": "^1.0.43"
  }
}
